<% layout('layouts/boilerplate') %>
<% if (products && totalQty>0) { %>
    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <ul class="list-group">
                <% for(let product of products) { %>
                <li class="list-group-item">
                    <span class="badge bg-dark text-light"><%= product.qty %> </span>
                    <strong><%= product.item.title %></strong>
                    <span class="dropdown">
                        <a class="btn btn-sm btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                          Dropdown link
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                          <li><a class="dropdown-item" href="/reduce/<%=product.item._id%>">Reduce by 1</a></li>
                          <li><a class="dropdown-item" href="/remove/<%=product.item._id%>">Remove All</a></li>
                        </ul>
                    </span>
                    <span class="badge bg-dark text-light" style="float: right;">$<%= product.price %></span>
                </li>
                <% } %> 
            </ul>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <strong>Total: $<%= totalPrice %> </strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>
<% } else { %>
    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <h2>No items in cart</h2>
        </div>
    </div>
<% } %>   